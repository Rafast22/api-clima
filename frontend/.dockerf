FROM node:20 AS build
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
#RUN npm run build --configuration=production
RUN npm run build --prod

# Usar uma imagem base do Lighttpd
FROM sebp/lighttpd:latest

# Copiar a dist do Angular para o diretório de documentos do Lighttpd
COPY --from=build /app/dist/front/browser/* /var/www/html/

# Expor a porta 80 (porta padrão do Lighttpd)
EXPOSE 80

# Comando para iniciar o Lighttpd
CMD ["lighttpd", "-D", "-f", "/etc/lighttpd/lighttpd.conf"]

